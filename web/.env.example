# Database
DATABASE_URL="postgresql://user:password@localhost:5432/yttr_search?schema=public"

# Redis (for rate limiting and caching)
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-generate-with-openssl-rand-base64-32"

# Email Verification
# Set to 'false' to disable email verification requirement for login
REQUIRE_EMAIL_VERIFICATION="true"

# YouTube Data API
YOUTUBE_API_KEY="your-youtube-api-key"
# Additional API keys for rotation (optional)
YOUTUBE_API_KEY_2=""
YOUTUBE_API_KEY_3=""

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_TIER1="price_..."
STRIPE_PRICE_TIER2="price_..."
STRIPE_PRICE_TIER3="price_..."

# Email (for verification emails)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yttr-search.com"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="YTTR Search"

# Rate Limiting (searches per day by tier)
RATE_LIMIT_ANONYMOUS="10"
RATE_LIMIT_FREE="30"
RATE_LIMIT_TIER1="120"
RATE_LIMIT_TIER2="340"
RATE_LIMIT_TIER3="500"

# Video Limits (max videos per search by tier)
VIDEO_LIMIT_FREE="50"
VIDEO_LIMIT_TIER1="100"
VIDEO_LIMIT_TIER2="250"
VIDEO_LIMIT_TIER3="500"

# Batch URL Limits (by tier)
BATCH_LIMIT_FREE="50"
BATCH_LIMIT_TIER1="100"
BATCH_LIMIT_TIER2="500"
BATCH_LIMIT_TIER3="1000"
