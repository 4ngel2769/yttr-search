# Docker Environment Variables
# Copy this file to .env and fill in the values

# Required
NEXTAUTH_SECRET=your-super-secret-key-here-generate-with-openssl-rand-base64-32
YOUTUBE_API_KEY=your-youtube-api-key

# Database (internal Docker network)
POSTGRES_PASSWORD=yttr_secret

# Redis (internal Docker network)
REDIS_PASSWORD=redis_secret

# NextAuth
NEXTAUTH_URL=http://localhost:3000

# Email Verification
REQUIRE_EMAIL_VERIFICATION=false

# YouTube API (additional keys for rotation - optional)
YOUTUBE_API_KEY_2=
YOUTUBE_API_KEY_3=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_TIER1=
STRIPE_PRICE_TIER2=
STRIPE_PRICE_TIER3=

# Email SMTP (optional)
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=contact-yttr@angellabs.xyz

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=YTTR Search
